{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "plugin:security/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["security"],
  "rules": {
    "no-console": "off",
    "import/extensions": ["error", "ignorePackages"],
    "security/detect-object-injection": "warn",
    "security/detect-non-literal-regexp": "warn",
    "max-len": ["error", { "code": 120, "ignoreStrings": true }]
  }
}
